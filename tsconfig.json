{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ES2015",
    "moduleResolution": "Bundler",
		"module": "ESNext",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"importHelpers": true
	}
}
